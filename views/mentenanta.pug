doctype html
html
  head
    title Listă Mentenanțe
    link(rel="stylesheet" href="/css/style.css")
  body
    h1 Listă Mentenanțe

    a(href="/mentenanta/add" class="btn btn-primary") Adaugă mentenanță nouă

    table(border="1" cellpadding="10")
      thead
        tr
          th ID
          th Vehicul
          th Tip Mentenanta
          th Descriere
          th Cost
          th Data Start
          th Data End
          th Acțiuni
      tbody
        each mentenanta in mentenantaList
          tr
            td= mentenanta.MENTENANTA_ID
            td= mentenanta.VEHICUL_ID
            td= mentenanta.TIP_MENTENANTA
            td= mentenanta.DESCRIERE
            td= mentenanta.COST.toFixed(2)
            td= mentenanta.DATA_ORA_START.toISOString().slice(0, 19)
            td= mentenanta.DATA_ORA_END.toISOString().slice(0, 19)
            td
                a(href=`/mentenanta/edit/${mentenanta.MENTENANTA_ID}` class="btn btn-warning") Editează
                form(action=`/mentenanta/${mentenanta.MENTENANTA_ID}?_method=DELETE` method="POST" class="tabel_form" style="display: inline;")
                  button(type="submit" class="btn btn-danger") Șterge
