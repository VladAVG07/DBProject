doctype html
html
  head
    title Listă Alimentari
    link(rel="stylesheet" href="/css/style.css")
  body
    h1 Listă Alimentari

    a(href="/alimentare/add" class="btn btn-primary") Adaugă alimentare noua

    table(border="1" cellpadding="10")
      thead
        tr
          th ID
          th Vehicul Id
          th Loc Alimentare
          th Tip combustibil
          th Cantitate Combustibil
          th Data Ora Alimentare
          th Cost Alimentare
          th Benzinarie
          th Actiuni
      tbody
        each alimentare in alimentareList
          tr
            td= alimentare.ALIMENTARE_ID
            td= alimentare.VEHICUL_ID 
            td= alimentare.LOC_ALIMENTARE 
            td= alimentare.TIP_COMBUSTIBIL 
            td= alimentare.CANTITATE_COMBUSTIBIL 
            td= alimentare.DATA_ORA_ALIMENTARE 
            td= alimentare.COST_DAUNE 
            td= alimentare.BENZINARIE
            td
                a(href=`/alimentare/edit/${alimentare.ALIMENTARE_ID}` class="btn btn-warning") Editează
                form(action=`/alimentare/${alimentare.ALIMENTARE_ID}?_method=DELETE` method="POST" class="tabel_form" style="display: inline;")
                  button(type="submit" class="btn btn-danger") Șterge
