doctype html
html
  head
    title Listă Client Cursă
    link(rel="stylesheet" href="/css/style.css")
  body
    h1 Listă Client Cursă

    table(border="1" cellpadding="10")
      thead
        tr
          th Client ID
          th Cursă ID
          th Acțiuni
      tbody
        each clientCursa in clientCursaList
          tr
            td= clientCursa.CLIENT_ID
            td= clientCursa.CURSA_ID
            td
              a(href=`/clientCursa/edit/${clientCursa.CLIENT_ID}/${clientCursa.CURSA_ID}` class="btn btn-warning") Editează
              form(action=`/clientCursa/${clientCursa.CLIENT_ID}/${clientCursa.CURSA_ID}?_method=DELETE` method="POST" class="tabel_form" style="display: inline;")
                button(type="submit" class="btn btn-danger") Șterge
